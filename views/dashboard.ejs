                          <label for="total">Total:</label>
                          <input style="border-radius: 60px;" type="number" id="total" name="total" required>
                      
                          <label for="name">Name:</label>
                          <input style="border-radius: 60px;" type="text" id="name" name="name" placeholder="odds" readonly>
                      
                          <label for="price">Price:</label>
                          <input style="border-radius: 60px;" type="text" id="price" name="price" readonly>
                      
                          <button style="border-radius: 60px;" type="submit">Submit</button>
                        </form>
