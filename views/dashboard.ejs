                      <script>
                        // Get all price elements
                        const priceElements = document.querySelectorAll('.price-td');
                      
                        // Get the price panel
                        const pricePanel = document.getElementById('pricePanel');
                      
                        // Array to store selected prices
                        const selectedPrices = [];
                      
                        // Multiply all selected prices
                        const multiplyPrices = () => {
                          let result = 1;
                          for (let price of selectedPrices) {
                            result *= price;
                          }
                          return result.toFixed(2);
                        };
                      
                        // Update the click event listener for each price element
                        priceElements.forEach((element) => {
                          element.addEventListener('click', () => {
                            // Check if the price has already been selected
                            if (element.classList.contains('selected')) {
                              // Remove the price from the selectedPrices array
                              const selectedPrice = parseFloat(element.textContent);
                              const index = selectedPrices.indexOf(selectedPrice);
                              if (index !== -1) {
                                selectedPrices.splice(index, 1);
                              }
                      
                              // Update the selected price display
                              const selectedPriceDisplay = document.getElementById('selectedPrice');
                              selectedPriceDisplay.textContent = selectedPrices.join(', ');
                      
                              // Update the price input field in the form
                              const priceInput = document.getElementById('price');
                              priceInput.value = multiplyPrices();
                      
                              // Remove the 'selected' class to indicate the price has been deselected
                              element.classList.remove('selected');
                            } else {
                              // Get the selected price
                              const selectedPrice = parseFloat(element.textContent);
                      
                              // Add the selected price to the array
                              selectedPrices.push(selectedPrice);
                      
                              // Update the selected price display
                              const selectedPriceDisplay = document.getElementById('selectedPrice');
                              selectedPriceDisplay.textContent = selectedPrices.join(', ');
                      
                              // Update the price input field in the form
                              const priceInput = document.getElementById('price');
                              priceInput.value = multiplyPrices();
                      
                              // Add the 'selected' class to indicate the price has been selected
                              element.classList.add('selected');
                            }
                      
                            // Show the price panel
                            pricePanel.classList.add('open');
                      
                            // Update the total input field with the count of selected prices
                            const totalInput = document.getElementById('total');
                            totalInput.value = selectedPrices.length;
                          });
                        });
                      
                        // Hide the price panel when the form is submitted
                        const form = document.querySelector('form');
                        form.addEventListener('submit', (event) => {
                          event.preventDefault();
                          // Your submission logic goes here
